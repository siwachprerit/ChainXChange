{{!< layouts/main}}

<style>
    .crypto-logo {
        width: 32px;
        height: 32px;
        margin-right: 12px;
    }
    .crypto-row {
        cursor: pointer;
        transition: background-color 0.2s;
    }
    .crypto-row:hover {
        background-color: var(--bg-hover);
    }
    .change-positive {
        color: var(--success-color);
    }
    .change-negative {
        color: var(--danger-color);
    }
    .change-neutral {
        color: var(--text-secondary);
    }
    .action-form {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .quantity-input {
        width: 100px;
        height: 34px; /* Match button height */
        padding: 0.375rem 0.75rem;
    }
</style>

<div class="page-header">
    <h1 class="page-title">Markets</h1>
    <p class="page-subtitle">Buy and sell your favorite cryptocurrencies</p>
</div>

{{#if error}}
    <div class="alert alert-danger">
        <div class="alert-content">
            <svg class="alert-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <span>{{error}}</span>
        </div>
    </div>
{{/if}}

<div class="card">
    <div class="card-header">
        <div class="card-title">Top Coins</div>
        <div class="card-subtitle">Showing top 100 cryptocurrencies by market cap</div>
    </div>
    
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>24h Change</th>
                    <th>Market Cap</th>
                    {{#if user}}
                    <th style="width: 200px;">Trade</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each coins}}
                <tr class="crypto-row fade-in" data-coin-id="{{id}}" onclick="window.location.href='/crypto/{{id}}'">
                    <td>{{@index_plus_one}}</td>
                    <td>
                        <div class="crypto-name">
                            <img src="{{image}}" alt="{{name}}" class="crypto-logo">
                            <div>
                                <div class="crypto-name-text">{{name}}</div>
                                <div class="crypto-symbol">{{symbol}}</div>
                            </div>
                        </div>
                    </td>
                    <td class="price-cell">${{formatPrice current_price}}</td>
                    <td class="change-cell {{#if (gt price_change_percentage_24h 0)}}change-positive{{else if (lt price_change_percentage_24h 0)}}change-negative{{else}}change-neutral{{/if}}">
                        {{#if price_change_percentage_24h}}{{formatPrice price_change_percentage_24h}}%{{else}}0%{{/if}}
                    </td>
                    <td class="value-cell">${{formatLargeNumber market_cap}}</td>
                    {{#if ../user}}
                    <td onclick="event.stopPropagation();">
                        <form action="/crypto/buy" method="POST" class="action-form">
                            <input type="hidden" name="coinId" value="{{id}}">
                            <input type="hidden" name="price" value="{{current_price}}">
                            <input type="number" 
                                   name="quantity" 
                                   min="0.000001" 
                                   step="0.000001" 
                                   required 
                                   placeholder="0.00"
                                   class="form-control quantity-input">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-plus-circle"></i>&nbsp;Buy
                            </button>
                        </form>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{#if user}}
    <div style="margin-top: 2rem; text-align: center;">
        <a href="/portfolio" class="btn btn-primary">
            <i class="fas fa-chart-pie"></i>&nbsp;View Portfolio
        </a>
    </div>
{{/if}}