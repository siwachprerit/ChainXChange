{{!< layouts/main}}

<style>
    /* Styles for the new layout */
    .profile-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .profile-details {
        flex: 1;
        min-width: 300px;
    }

    .profile-history {
        flex: 2;
        min-width: 400px;
    }

    /* Styles copied from history.hbs */
    .tx-type {
        padding: 0.25rem 0.6rem;
        border-radius: 12px;
        font-weight: bold;
        font-size: 0.8rem;
        text-transform: uppercase;
    }
    .tx-buy {
        background-color: rgba(0, 128, 0, 0.15);
        color: var(--success-color);
    }
    .tx-sell {
        background-color: rgba(255, 0, 0, 0.15);
        color: var(--danger-color);
    }
</style>

<div class="page-header">
    <h1 class="page-title">Profile</h1>
    <p class="page-subtitle">Manage your account settings and recent history</p>
</div>

{{#if user}}
    <div class="profile-container">

        <div class="profile-details">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <i class="fas fa-user-circle"></i>&nbsp;Account Information
                    </div>
                    <div class="card-subtitle">Your ChainXchange account details</div>
                </div>
                
                <div style="padding: 1rem 0;">
                    <div class="form-group">
                        <label class="form-label">Username</label>
                        <div class="form-control" style="background: var(--bg-hover); cursor: not-allowed;">
                            {{user.username}}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <div class="form-control" style="background: var(--bg-hover); cursor: not-allowed;">
                            {{user.email}}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Wallet Balance</label>
                        <div class="form-control" style="background: var(--bg-hover); cursor: not-allowed;">
                            ${{formatNumber user.wallet}}
                        </div>
                    </div>

                    <a href="/payment/wallet" class="btn btn-primary btn-block" style="margin-top: 1rem;">
                        <i class="fas fa-wallet"></i>&nbsp;Manage Wallet
                    </a>
                </div>
            </div>
        </div>

        <div class="profile-history">
            {{#if transactions.length}}
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Recent Order History</div>
                        <a href="/crypto/history" class="btn btn-sm btn-primary" style="margin-left: auto;">View All &rarr;</a>
                    </div>
                    
                    <div class="table-container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Asset</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each transactions}}
                                <tr class="fade-in">
                                    <td>{{this.formattedTimestamp}}</td>
                                    <td>
                                        <span class="tx-type {{#if isBuy}}tx-buy{{else}}tx-sell{{/if}}">
                                            {{this.type}}
                                        </span>
                                    </td>
                                    <td>{{this.coinName}}</td>
                                    <td class="price-cell">${{formatPrice this.price}}</td>
                                    <td class="quantity-cell">{{formatPrice this.quantity}}</td>
                                    <td class="value-cell">${{formatPrice this.totalValue}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            {{else}}
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Recent Order History</div>
                    </div>
                    <div class="empty-state" style="padding: 2rem;">
                        <div class="empty-state-icon">
                            <i class="fas fa-history"></i>
                        </div>
                        <div class="empty-state-title">No Transactions Yet</div>
                        <div class="empty-state-text">
                            Your recent trades will appear here.
                        </div>
                        <a href="/" class="btn btn-primary btn-sm" style="margin-top: 1rem;">
                            <i class="fas fa-shopping-cart"></i>&nbsp;Start Trading
                        </a>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

    <div style="text-align: center; margin-top: 2rem;">
        <a href="/portfolio" class="btn btn-primary" style="margin-right: 1rem;">
            <i class="fas fa-chart-pie"></i>&nbsp;View Full Portfolio
        </a>
        <a href="/" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>&nbsp;Back to Markets
        </a>
    </div>

{{else}}
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-user-slash"></i>
        </div>
        <div class="empty-state-title">Not Logged In</div>
        <div class="empty-state-text">
            Please sign in to view your profile and account information.
        </div>
        <div style="margin-top: 1rem;">
            <a href="/auth/login" class="btn btn-primary" style="margin-right: 1rem;">
                <i class="fas fa-sign-in-alt"></i>&nbsp;Login
            </a>
            <a href="/auth/signup" class="btn btn-secondary">
                <i class="fas fa-user-plus"></i>&nbsp;Sign Up
            </a>
        </div>
    </div>
{{/if}}